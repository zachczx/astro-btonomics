                    </ul>
                </div>
                <div class="hidden font-bold md:flex">
                    <a href="/search" class="text-primary hover:text-accent">Search</a>
                </div>
                <div class="hidden font-bold md:flex">
                    <a href="/about-us" class="text-primary hover:text-accent">About</a>
                </div>
            </div>
            <div class="navbar-end h-full self-center lg:mt-4 lg:self-start">
                <a href="/search" class="btn btn-circle btn-ghost" id="searchActivate">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class=""
                        height="2em"
                        width="2em"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </a>
            </div>
        </div>
        <div class="grid justify-items-center">
            <div class="p-4 md:max-w-(--breakpoint-2xl) lg:p-8">
                <slot />
            </div>
        </div>
        <Footer />
        <script>
            function search(searchActivate, search) {
                const searchActivateButton = document.getElementById(searchActivate)
                const searchBox = document.getElementById(search)
                searchActivateButton?.addEventListener('click', (evt) => {
                    if (searchBox?.classList.contains('hidden')) {
                        searchBox?.classList.remove('hidden')
                    } else {
                        searchBox?.classList.add('hidden')
                    }
                })
            }
            search('searchActivate', 'search')
            document.addEventListener('astro:after-swap', () => {
                search('searchActivate', 'search')
            })
        </script>
        <style is:global>
